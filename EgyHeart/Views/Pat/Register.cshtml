@model Pat

@{
    ViewData["Title"] = "Register";
}
<div class="container pt-2">
    <form method="post" asp-action="Register">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Application</h2>
                <hr />
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            
            <div class="mb-3">
                <label asp-for="PatName">Name</label>
                <input asp-for="PatName" class="form-control"  />
                <span asp-validation-for="PatName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PatIdCard"> National ID</label>
                <input asp-for="PatIdCard" class="form-control" />
                <span asp-validation-for="PatIdCard" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PatMobile">Mobile Phone</label>
                <input asp-for="PatMobile" class="form-control" />
                <span asp-validation-for="PatMobile" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PatAddress">Adress</label>
                <input asp-for="PatAddress" class="form-control" />
                <span asp-validation-for="PatAddress" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" checked>
                    <label class="form-check-label">
                       male
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" >
                    <label class="form-check-label">
                        female
                    </label>
                </div>
            </div>
         
            <div class="mb-3">
                <label asp-for="PatDate">Birth Date</label>
                <input type="date" asp-for="PatDate" class="form-control" />
                <span asp-validation-for="PatDate" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="PatEmail">Email</label>
                <input asp-for="PatEmail" type="email" class="form-control" />
                <span asp-validation-for="PatEmail" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary" style="width:150px">Create Account</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary" style="width:150px">
                back home
            </a>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}

